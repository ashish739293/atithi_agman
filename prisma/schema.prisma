generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int       @id @default(autoincrement())
  name       String?   @db.Text
  email      String?   @default("0")
  username   String?   @unique(map: "username") @default("0")
  password   String?   @default("0")
  mobile     String?   @default("0")
  type       String?   @default("0")
  pincode    Int?      @default(0)
  address_1  String?   @default("NA")
  address_2  String?   @default("NA")
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
}

model events {
  id        Int      @id @default(autoincrement())
  title     String   @default("0")
  date      DateTime @default(dbgenerated("(now(3))")) @db.DateTime(0)
  filePath  String   @default("0")
  createdAt DateTime @default(dbgenerated("(now(3))")) @db.DateTime(0)
  updatedAt DateTime @updatedAt @db.DateTime(0)
  user_id   Int

  @@index([user_id])
}
